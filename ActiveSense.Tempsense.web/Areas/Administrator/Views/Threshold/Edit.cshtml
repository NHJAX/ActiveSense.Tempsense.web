@model ActiveSense.Tempsense.model.Model.Threshold

@{
    ViewBag.Title = "Edit";
}
<h2>
    <font color="#999">
        Edit Threshold
    </font>
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.thresholdID)
        <div class="form-group">
            <label for="Temperature_min" class="control-label col-md-2"> Mínimum Temperature</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Temperature_min, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Temperature_min, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Temperature_max" class="control-label col-md-2"> Maximum Temperature</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Temperature_max, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Temperature_max, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Tolerance_min" class="control-label col-md-2"> Minimum Tolerance </label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Tolerance_min, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tolerance_min, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Tolerance_max" class="control-label col-md-2"> Maximum Tolerance </label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Tolerance_max, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tolerance_max, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="DeviceID" class="control-label col-md-2"> device</label>
            <div class="col-sm-2" style="left: 1.3%;">
                <div class="form-group">
                    @Html.DropDownList("DeviceID", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
